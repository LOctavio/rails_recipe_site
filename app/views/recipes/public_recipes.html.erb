<h1>Public Recipes</h1>
<div>
    <% @recipes.each do |recipe| %>
        <%= link_to recipe_path(recipe.id) do %>
            <div class="my-recipe-preview">
                <div class="my-recipe-preview-title">
                    <span><%= recipe.name %></span>
                    <p>by <%= recipe.user.name %></p>
                </div>
                <div class="total_items_and_price">
                    <span>Total food items: <%= recipe.total_food_items %></span>
                    <span>Total price: <%= recipe.total_price %></span>
                </div>
            </div>
        <% end %>
    <% end %>
</div>