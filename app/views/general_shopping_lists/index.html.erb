<h1>Shopping List</h1>
<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @ingredients.each do |ingredient| %>  
      <tr>
      <td><%= ingredient.name %></td>
      <td><%= ingredient.quantity %> <%= ingredient.measurement_unit %></td>
      <td><%= ingredient.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>